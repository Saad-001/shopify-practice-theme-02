@font-face {
   font-family: 'YoungSerif';
   src:
      url('{{ "YoungSerif-Regular.woff2" | asset_url }}') format('woff2'),
      url('{{ "YoungSerif-Regular.ttf" | asset_url }}') format('ttf'),
      url('{{ "YoungSerif-Regular.otf" | asset_url }}')  format('otf'),
}

:root{
   --headline-font : "YoungSerif", "Georgia", "Times New Roman", Times, serif; 
   --text-font : "Karla", "Helvetica Neue", Arial, Helvetica, sans-serif; 

   --black: #000000;
   --white: #FFFFFF;

   --light-black: #333333;

   --text-color: #555555;
   --text-color-white: #CCCCCC;
   --text-color-light: #707070;
   --text-color-light-white: #CCCCCC;

   --gold: #BEA482;
   --gold-dark: color-mix(in srgb,var(--gold),#000 15%);

   --background-color: #F7F2EA;
   --header-background-color: #EEE6DD;
   --footer-background-color: #F4EDE6;
   --border-color: rgba(0,0,0,0.15);
   --border-color-white: rgba(255,255,255,0.15);

   --standard-border: 1px solid var(--border-color);
   --standard-border-white: 1px solid var(--border-color-white);

   --line-global: 20px;
   --gutter-global: var(--line-global);
   --offset-global: calc(var(--line-global) * 2);

   --header-height: calc(var(--line-global) * 4); 

   --type-headline-lg: 50px;
   --type-headline-med: 38px;
   --type-body-med: 15px;
   --type-body-sm: 13px;

   --type-bold: 700;
   --type-book: 400;
}

*{
   font-family: var(--text-font);
   box-sizing: border-box;
}

html, body {
   width: 100%;
   margin: 0;
   padding: 0;
   color: var(--black);
   line-height: var(--line-global);
}

body{
   font-size: var(--type-body-med);
   background-color : var(--background-color);
   background-image: url("{{ "background.jpg" | asset_url }}");
   background-size: 100%;
   background-attachment: fixed;
   background-repeat: no-repeat;
   padding-top: calc(var(--header-height) + var(--offset-global));
}

h1, h2, h3, h4, h5, h6, p, ul, ol {
   margin: 0;
   padding: 0;
   font-weight: var(--type-book);
}

a{
   text-decoration: none;
}

ul, ol{
   list-style-type: none;
}

.reset-input{
   appearance: none;
   -webkit-appearance: none;
   -moz-appearance: none;
   -ms-appearance: none;
   cursor: pointer;
   background: transparent;
   border: none;
   border-radius: 0;
   width: auto;
   margin: 0;
   padding: 0;
   line-height: normal;
   -webkit-font-smoothing: inherit;
   -moz-osx-font-smoothing: inherit;
   text-align: left;
}

/* utility classes */
.wrapper{
   padding-left: var(--offset-global);
   padding-right: var(--offset-global);
}

.flex-space-between {
   display: flex;
   flex-direction: row;
   align-items: center;
   justify-content: space-between;
}

.spaced-caps {
   font-size: var(--type-body-sm);
   font-weight: var(--type-bold);
   text-transform: uppercase;
   letter-spacing: 0.07em;
}

.grid{
   display: grid;
   grid-column-gap: var(--gutter-global);
   grid-row-gap: var(--gutter-global);
}

.grid > * {
   min-width: 0;
   min-height: 0;
}

.grid.collapse{
   column-gap: 0;
   row-gap: 0;
}

.two-columns{
   grid-template-columns: 1fr 1fr;
}

.valign-center{
   display: flex;
   flex-direction: column;
   /* justify-content: center; */
}

.valign-center > *:first-child {
   margin-top: auto;
}  

.valign-center > *:last-child {
   margin-bottom: auto;
}

.ta-center {
   text-align: center;
}

.text-white{
   color: var(--white);
}

.text-white h1, 
.text-white .h1, 
.text-white h2, 
.text-white .h2, 
.text-white h3, 
.text-white .h3, 
.text-white h4, 
.text-white .h4,  
.text-white a {
   color : var(--white);
}

.text-white p{
   color: var(--text-color-white);
}

/* style guide */
h1, h2, .h1, .h2, h3, .h3{
   font-family: var(--headline-font);
   font-weight: var(--type-bold);
   color: var(--light-black);
}

h1, .h1{
   font-size : var(--type-headline-lg);
   line-height: calc(var(--line-global) * 3);
}

h2, .h2{
   font-size : var(--type-headline-med);
   line-height: calc(var(--line-global) * 2);
}

h3, .h3{
   font-size: var(--type-body-med);
   line-height: var(--line-global);
}

h4, .h4{
   color: var(--light-black);
}

.text-link{
   color: var(--black);
}

a{
   color: var(--text-color);
}

a:hover{
   opacity: 0.75;
}

p, .accent-color{
   color: var(--text-color);
}

p a{
   border-bottom: var(--standard-border);
}

p a:hover{
   border-bottom-color: var(--black);
}

button[type="submit"], .button {
   display: inline-block;
   width: 100%;
   padding: var(--line-global);
   text-align: center;
   line-height: var(--line-global);
   font-size: var(--type-body-med);
   color: var(--white);
   background: var(--gold);
   transition: all 0.3s;
}

button[type="submit"]:disabled, .button:disabled{
   cursor: not-allowed;
   text-decoration: line-through;
   opacity: 0.75;
}

button[type="submit"]:not(:disabled):hover, .button:not(:disabled):hover {
   background: var(--gold-dark);
}


/* header */
.header-global {
   width: 100%;
   height: var(--header-height);
   padding: var(--line-global) var(--offset-global);
   position: fixed;
   top: 0;
   left: 0;
   background-color: var(--header-background-color);
   z-index: 1;
}

.header-global .shop-link{
   order : -1;
}

.cart-close-text{
   display: none;
}

.header-global .spaced-caps {
   font-size: var(--type-body-med);
}

/* footer */
.footer-global{
   background-color: var(--footer-background-color);
   margin-top: var(--offset-global);
   border-top: var(--standard-border);
}

.footer-global h4{
   margin-bottom: var(--line-global);
}

.footer-global .spaced-caps {
   font-size: var(--type-body-med);
}

.footer-top, .footer-bottom {
   padding: var(--offset-global)
}

.footer-top{
   grid-template-columns: 2fr 1fr 1fr;
}

.footer-bottom{
   border-top: var(--standard-border);
}

.social-links a {
   display: inline-block;
}

.social-links a:not(:last-child) {
   margin-right: calc(var(--line-global) / 2);
}

/* page index */
.index-top{
   height: 50vh;
   min-height: 400px;
   padding-bottom: var(--offset-global);
}

/* shared product styles */
.product-info-section {
   background: var(--light-black);
   padding: var(--offset-global);
   display: flex;
   flex-direction: column;
   text-align : center;
}

.product-info-section .product-title {
   padding: var(--line-global);
   margin-top: auto;
   margin-bottom: auto;
}

.product-info-section .product-description{
   margin-bottom : var(--line-global);
}

.product-info-section .price {
   display: inline-block;
   font-size: var(--line-global);
   color: var(--text-color-white);
   font-weight: var(--type-book);
   vertical-align: super;
}

.product-info-section .below-title {
   max-width:  396px;
   margin: 0 auto;
}

.product-info-section p{
   margin-bottom : var(--line-global);
}

/* product card */
.product-card .card-image a {
   display: block;
   width: 100%;
   height: 100%;
}

.product-card .card-image img{
   display: block;
   max-width: 100%;
   height: auto;
}

.product-card:nth-child(odd) .card-image {
   grid-column: 0;
   grid-row: 1;
}

/* product page */
.product-image{
   width: 100%;
}

.product-image img{
   display: block;
   max-width: 100%;
   height: 100%;
   object-fit: cover;
}

/* add to cart form  */
#add-to-cart-form{

}

.option-row {
   text-align: left;
   padding: var(--line-global) 0;
   border-top: var(--standard-border-white);
}

.option-row:last-of-type{
   border-bottom: var(--standard-border-white);
}

.option-title {
   color: var(--text-color-white)
}

.visually-hidden{
   position: absolute !important;
   height: 1px;
   width: 1px;
   overflow: hidden;
   clip: rect(1px 1px 1px 1px);
   clip: rect(1px, 1px, 1px, 1px);
}

.variant-radio + label{
   display: inline-block;
   cursor: pointer;
   padding: calc(var(--line-global) / 5);
   border: 1px solid transparent;
   color: var(--text-color-light-white);
}

.variant-radio:disabled + label{
   cursor: not-allowed;
   text-decoration: line-through;
   color: var(--text-color);
}

.variant-radio:checked + label{
   border: 1px solid var(--white);
   color: var(--white);
}

.quantity-button{
   font-size: var(--line-global);
   line-height: var(--line-global);
   text-align: center;
   font-weight: var(--type-bold);
   color: var(--text-color-white);
   width: var(--line-global);
   vertical-align: middle;
}

/* .quantity-button.minus {
   padding-bottom: 3px;
} */

.quantity-button.plus {
   padding-bottom: 3px;
}

.quantity-button:disabled{
   opacity: 0.5;
}

.quantity-button:not(:disabled):hover{
   color: var(--white);
}

.quantity-text {
   display: inline-block;
   text-align: center;
   min-width: var(--line-global);
   margin: 0 calc(var(--line-global) / 2);
}

#add-to-cart-button{
   margin-top: var(--line-global);
}

/* shared cart styles */
.cart-lines{
   margin-top: var(--line-global);
   padding: var(--line-global) 0;
   border-top: var(--standard-border-white);
   border-bottom: var(--standard-border-white);
}

.cart-empty-text{
   margin : calc(var(--line-global) * 4) 0;
}

/* cart page styles */
.cart-page-contents{
   background: var(--light-black);
   max-width: 380px;
   padding: var(--line-global);
   margin: 0 auto;
}

.line-item .line-image {
   width: 80px;
   position: relative;
}

.line-item img{
   display: block;
   max-width: 100%;
   height: auto;
}

.line-item .remove-line{
   position: absolute;
   width: var(--line-global);
   height: var(--line-global);
   top: calc(0px - (var(--line-global) / 2));
   right: calc(0px - (var(--line-global) / 2));
   display: none;
}

.line-item:hover .remove-line{
   display: block;
}

.line-item:not(:first-child) {
   margin-top: var(--line-global);
}

.subtotal-line{
   padding: var(--line-global) 0;
}

/* mini cart page styles */

#mini-cart {
   position: fixed;
   top: var(--header-height);
   bottom: 0;
   right: 0;
   width: 100%;
   max-width: 380px;
   background: var(--light-black);
   display: none;
}

#mini-cart .mini-cart-contents{
   overflow: auto;
   padding: var(--offset-global);
   height: 100%;
}

#mini-cart.open-mini-cart {
   display: block;
}

main{
   transition: all 0.3s;
}

/* page template styles */

#page{
   min-height: 80vh;
}

#page .page-content {
   margin-top: var(--offset-global);
}

#page .page-inner {
   max-width: 500px;
   margin : 0 auto;
}

/* 404 styles */
#page-404{
   min-height: calc(100vh - var(--header-height));
}

@media only screen and (max-width: 1023px) {

   .two-columns {
     grid-template-columns: 1fr;
   }
 
   .wrapper {
     padding-left: var(--line-global);
     padding-right: var(--line-global);
   }
 
   .mini-cart-contents {
     padding: var(--line-global);
   }

   .product-card .card-image {
      grid-row: 1;
      grid-column: 1;
   }
 
   .product-card .card-info {
      grid-row: 2;
      grid-column: 1;
    }
 
   .product-image:first-of-type {
     grid-row: 1;
   }
 
   .product-info {
     grid-row: 2;
   }
 
   .option-fieldset {
     max-width: 50%;
   }
 
   .variant-radio+label {
     display: block;
   }
 
   .footer-top {
     grid-template-columns: 1fr;
   }
}

@media only screen and (max-width: 560px) {
   #mini-cart{
      max-width: 350px;
   }

   #mini-cart .mini-cart-contents{
      padding: calc(var(--offset-global) / 2);
   }
}